<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Course Scheduler</title>
    @Styles.Render("~/Content/css")
    <!-- Override navbar-default for onw with custom colors-->
    @Styles.Render("~/Content/navbar-custom.css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Course Scheduler", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Sections By Instructors", "SectionByInstructor", "Instructors")</li>
                    <li>@Html.ActionLink("Instructor Calendar", "InstructorCalendar", "Instructors")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Lists<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Buildings", "Index", "Buildings")</li>
                            <li>@Html.ActionLink("Classrooms", "Index", "Classrooms")</li>
                            <li>@Html.ActionLink("Courses", "Index", "Courses")</li>
                            <li>@Html.ActionLink("Programs", "Index", "Programs")</li>
                            <li>@Html.ActionLink("InstructorPrograms", "Index", "InstructorPrograms")</li>
                            <li>@Html.ActionLink("InstructorReleases", "Index", "InstructorReleases")</li>
                            <li>@Html.ActionLink("Instructors", "Index", "Instructors")</li>
                            <li>@Html.ActionLink("Sections", "Index", "Sections")</li>
                            <li>@Html.ActionLink("Semesters", "Index", "Semesters")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Create<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Create Building", "Create", "Buildings")</li>
                            <li>@Html.ActionLink("Create Classroom", "Create", "Classrooms")</li>
                            <li>@Html.ActionLink("Create Course", "Create", "Courses")</li>
                            <li>@Html.ActionLink("Create Program", "Create", "Programs")</li>
                            <li>@Html.ActionLink("Create Instructor", "Create", "Instructors")</li>
                            <li>@Html.ActionLink("Create InstructorProgram", "Create", "InstructorPrograms")</li>
                            <li>@Html.ActionLink("Create InstructorRelease", "Create", "InstructorReleases")</li>
                            <li>@Html.ActionLink("Create Section", "Create", "Sections")</li>
                            <li>@Html.ActionLink("Create Semester", "Create", "Semesters")</li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div id="wrapper">
        <div id="page-content-wrapper">
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Course Scheduler</p>
                </footer>
            </div>

            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>
    </div>
</body>
</html>
