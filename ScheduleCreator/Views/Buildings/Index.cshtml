@model IEnumerable<ScheduleCreator.Models.Building>

@{
    ViewBag.Title = "Buildings";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.buildingPrefix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.buildingName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.campusPrefix)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.buildingPrefix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.buildingName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.campusPrefix)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.building_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.building_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.building_id })
        </td>
    </tr>
}

</table>
