@model IEnumerable<ScheduleCreator.Models.InstructorProgram>

@{
    ViewBag.Title = "Instructor Programs";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Program)
        </th>
        <th>
            Instructor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.programPrefix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instructor.instructorLastName), @Html.DisplayFor(modelItem => item.Instructor.instructorFirstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.instructorProgram_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.instructorProgram_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.instructorProgram_id })
        </td>
    </tr>
}

</table>
