@model IEnumerable<ScheduleCreator.Models.Program>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.programPrefix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.programName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.maxCreditsAllowed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.programPrefix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.programName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maxCreditsAllowed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.program_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.program_id }) |
